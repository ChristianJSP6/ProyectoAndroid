<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarJuegos"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/bg_color">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Juegos"
        android:fontFamily="@font/permanentmarker"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        />
    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxJuego1"
        android:text="League of Legends"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:buttonTint="@color/black"
        android:paddingStart="5dp"

        />
    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxJuego2"
        android:text="Valorant"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:buttonTint="@color/black"
        android:paddingStart="5dp"
        />
    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxJuego3"
        android:text="Rocket League"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:buttonTint="@color/black"
        android:paddingStart="5dp"

        />
    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxJuego4"
        android:text="Counter Strike"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:buttonTint="@color/black"
        android:paddingStart="5dp"

        />
    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="Siguiente"
        android:textSize="20dp" />

</LinearLayout>