<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preguntas"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/bg_color">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Color Favorito?"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etRes1"
        android:hint="Respuesta"
        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:paddingStart="110dp"
        android:drawablePadding="12dp"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Equipo de Fútbol Favorito?"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etRes2"
        android:hint="Respuesta"
        android:inputType="text"
        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:paddingStart="110dp"
        android:drawablePadding="12dp"
        android:layout_marginBottom="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Nombre de Mascota?"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/tvContra"
        android:layout_marginBottom="20dp"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etRes3"
        android:hint="Respuesta"

        android:layout_gravity="center"
        android:background="@drawable/custom_input"
        android:paddingStart="110dp"
        android:drawablePadding="12dp"
        android:inputType="text"
        android:layout_marginBottom="20dp"

        />


    <Button
        android:id="@+id/btnSig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Siguiente"
        android:textSize="20dp"
        android:backgroundTint="@color/rojo"

        />

</LinearLayout>